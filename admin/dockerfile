# Build stage
FROM node:18 AS build
WORKDIR /app

# Install deps first (cache-friendly)
COPY package*.json ./
RUN npm install

# Copy source and build
COPY . .
RUN npm run build

# Run stage (serve static via nginx)
FROM nginx:stable-alpine
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
